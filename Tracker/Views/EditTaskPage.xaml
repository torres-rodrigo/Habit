<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tracker.Views.EditTaskPage"
             xmlns:viewmodels="clr-namespace:Tracker.ViewModels"
             x:DataType="viewmodels:EditTaskViewModel">

    <Grid RowDefinitions="*,Auto">
        <!-- Scrollable Content -->
        <ScrollView Grid.Row="0">
            <VerticalStackLayout Padding="20" Spacing="20">
            
            <!-- Task Name -->
            <VerticalStackLayout Spacing="5">
                <Label Text="Task Name" FontAttributes="Bold"/>
                <Entry Text="{Binding TaskName}" Placeholder="Enter task name"/>
            </VerticalStackLayout>

            <!-- Description -->
            <VerticalStackLayout Spacing="5">
                <Label Text="Description" FontAttributes="Bold"/>
                <Editor Text="{Binding Description}" 
                        Placeholder="Enter description (optional)"
                        HeightRequest="100"/>
            </VerticalStackLayout>

            <!-- Due Date -->
            <VerticalStackLayout Spacing="10">
                <Label Text="Due Date" FontAttributes="Bold" FontSize="16"/>
                
                <HorizontalStackLayout Spacing="10">
                    <Switch IsToggled="{Binding HasDueDate}"/>
                    <Label Text="Set Due Date" VerticalOptions="Center"/>
                </HorizontalStackLayout>

                <DatePicker Date="{Binding DueDate}" 
                          IsVisible="{Binding HasDueDate}"/>
            </VerticalStackLayout>

            <!-- Reminders -->
            <VerticalStackLayout Spacing="10">
                <Label Text="Reminders" FontAttributes="Bold" FontSize="16"/>
                
                <HorizontalStackLayout Spacing="10">
                    <Switch IsToggled="{Binding HasReminders}"/>
                    <Label Text="Enable Reminders" VerticalOptions="Center"/>
                </HorizontalStackLayout>

                <TimePicker Time="{Binding ReminderTime}" 
                          IsVisible="{Binding HasReminders}"/>
            </VerticalStackLayout>

            <!-- Priority -->
            <VerticalStackLayout Spacing="10">
                <Label Text="Priority" FontAttributes="Bold" FontSize="16"/>
                <Picker ItemsSource="{Binding Priorities}"
                        SelectedItem="{Binding SelectedPriority}"/>
            </VerticalStackLayout>

            <!-- Subtasks -->
            <VerticalStackLayout Spacing="10">
                <Label Text="Subtasks" FontAttributes="Bold" FontSize="16"/>
                
                <CollectionView ItemsSource="{Binding Subtasks}" SelectionMode="None">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="viewmodels:SubtaskItem">
                            <Grid ColumnDefinitions="*,Auto" Margin="0,5">
                                <Entry Grid.Column="0"
                                       Text="{Binding Name}"
                                       Placeholder="Subtask name"/>
                                <Button Grid.Column="1"
                                        Text="âœ•"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:EditTaskViewModel}}, Path=RemoveSubtaskCommand}"
                                        CommandParameter="{Binding .}"
                                        BackgroundColor="Transparent"
                                        TextColor="{StaticResource Primary}"
                                        FontSize="18"
                                        Padding="10,0"/>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <Button Text="+ Add Subtask" 
                        Command="{Binding AddSubtaskCommand}"
                        BackgroundColor="{StaticResource Primary}"
                        TextColor="White"
                        Margin="0,10,0,0"/>
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
    
    <!-- Fixed Buttons at Bottom -->
    <Grid Grid.Row="1" ColumnDefinitions="*,*" ColumnSpacing="10" Padding="15" BackgroundColor="{StaticResource OffBlack}">
        <Button Grid.Column="0" 
                Text="Cancel"
                Command="{Binding CancelCommand}"
                BackgroundColor="{StaticResource Gray300}"
                TextColor="{StaticResource Gray900}"
                WidthRequest="150"
                HorizontalOptions="Center"/>
        <Button Grid.Column="1" 
                Text="Save"
                Command="{Binding SaveCommand}"
                BackgroundColor="{StaticResource Primary}"
                TextColor="White"
                WidthRequest="150"
                HorizontalOptions="Center"/>
    </Grid>
</Grid>
</ContentPage>
